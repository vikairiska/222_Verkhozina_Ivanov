<Page x:Class="_222_Verkhozina_Ivanov.Pages.AddPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Verkhozina_Ivanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPaymentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название платежа" Grid.Row="0" FontSize="20"  Margin="17,19,569,102"/>
        <TextBox x:Name="TBPaymentName" 
 Grid.Row="0" 
 Margin="400,26,48,95" 
 Text="{Binding Name}" />
        <TextBlock Text="Сумма" FontSize="20" Margin="17,68,615,51"/>
        <TextBox x:Name="TBAmount" 
 Margin="400,75,48,45" 
 Text="{Binding Price}" />
        <Button x:Name="ButtonSave" Content="Сохранить" Grid.Row="2"  Click="ButtonSave_Click" Margin="11,105,447,10"/>
        <Button x:Name="ButtonClean" Content="Очистить" Grid.Row="2"  Click="ButtonClean_Click" Margin="448,105,10,10"/>
        <TextBlock Grid.Row="1" FontSize="20" Margin="17,10,567,108"><Run  Language="ru-ru" Text="Количество"/></TextBlock>
        <TextBox x:Name="TBCount" 
 Grid.Row="1" 
 Margin="400,10,48,109" 
 Text="{Binding Num}" />
        <TextBlock Grid.Row="1" FontSize="20" Margin="27,62,618,57"><Run  Language="ru-ru" Text="Дата"/></TextBlock>
        <TextBox x:Name="TBDate" Grid.Row="1" Margin="400,62,48,57"  Text="{Binding Date}"/>
        <ComboBox x:Name="CBUser" Grid.Row="1" Margin="400,109,48,10"  SelectedValuePath="ID" 
 SelectedValue="{Binding Path=UserID}" />
        <ComboBox x:Name="CBCategory" 
         Grid.Row="2" 
         Margin="400,10,48,109" 
         SelectedValuePath="ID" 
         SelectedValue="{Binding Path=CategoryID}"/>
        <TextBlock Grid.Row="1" FontSize="20" Margin="27,109,618,10"><Run  Text="ID"/><Run Language="ru-ru" Text=" клиента"/></TextBlock>
        <TextBlock Grid.Row="2" FontSize="20" Margin="24,10,622,109"><Run  Text="ID"/><Run Language="ru-ru" Text=" категории"/></TextBlock>
    </Grid>

</Page>
